      \setlength{\parindent}{1.3cm}

    % Controle do espaçamento entre um parágrafo e outro:
      \setlength{\parskip}{0.2cm}  % tente também \onelineskip

  % Compila o index
    \makeindex

  % Definição de posicionamento da marca d'agua do CPAI
    \newcommand{\placetextbox}[3]{% \placetextbox{<horizontal pos>}{<vertical pos>}{<stuff>}
        \setbox0=\hbox{#3}% Put <stuff> in a box
        \AddToShipoutPictureFG{% Add <stuff> to current page foreground
            \put(\LenToUnit{#1\paperwidth},\LenToUnit{#2\paperheight}){\vtop{{\null}\makebox[0pt][c]{#3}}}%
        }%
    }%

  % Troca o símbolo do itemize para um '--'
    \renewcommand{\labelitemi}{--}

  % Novo comando para citar ANEXOS
    \newcommand{\refanexo}[1]{\hyperref[#1]{Anexo~\ref{#1}}}

  % Nova linha horizontal
    \newcommand{\HRule}[1]{\rule{\linewidth}{#1}}

  % Numeros ordinais
    \newcommand{\ele}{\raise1ex\hbox{\underbar{\tiny o}}}
    \newcommand{\ela}{\raise1ex\hbox{\underbar{\tiny a}}}

  % Para desenhar linha diagonal até o fim da página
